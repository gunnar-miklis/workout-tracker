<body class="signup-body flex-column-center">

<div class="signup-container flex-column-center">
  <h1>Sign Up</h1>
  {{#if message}}
    {{message}}
  {{/if}}
  <form action="/signup" method="POST" class="flex-column-center">
    <input class="standard-input" type="text" name="username" placeholder="USERNAME">
    <input class="standard-input" type="email" name="email" placeholder="EMAIL">
    <input class="standard-input" type="password" name="password" placeholder="PASSWORD">
    <button type="submit" class="main-button">Sign Up</button>
  </form>
</div>