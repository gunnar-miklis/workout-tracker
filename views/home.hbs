<body class="flex-column-center">

<h1>Welcome {{user.username}}</h1>
<p class="secondary-text">Start workout from template</p>
<a href='/tracker' class="main-button"> Track Workout </a>

<p>Workouts in total: {{totalWorkouts}}</p>
<p>Active Days: {{activeDays}}</p>

<ul class="workouts-ul">
	{{#each pastWorkouts}}
		<details class="container">
			<summary>
			<div class="image-container">
				{{!-- <img src="/images/man-biceps-curl.jpg" alt=""> --}}
			</div>
			<div class="text-container">
				<h3>{{title}}</h3>
				<p>{{formatDate date}}</p>
			</div>
			</summary>
				<p><i>{{description}}</i></p>
				<table>
					<thead>
						<tr>
							<th>Exercise</th>
							<th>Type</th>
							<th>Time</th>
							<th>Rep</th>
							<th>Weight</th>
							<th>Distance</th>
						</tr>
					</thead>
					<tbody>
						{{#each exercises}}
						<tr>
							<td>{{title}}</td>
							<td>{{type}}</td>
							<td>{{time}}</td>
							<td>{{rep}}</td>
							<td>{{repWeight}}</td>
							<td>{{distance}}</td>
						</tr>
						{{/each}}
					</tbody>
				</table>
				<p>Duration: {{duration}} minutes</p>
		</details>
	{{/each}}
</ul>