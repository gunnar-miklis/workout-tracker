<body class="flex-column-center">

<h1>Welcome {{user.username}}</h1>
<p class="secondary-text">Start workout from template</p>
<a href='/tracker' class="main-button"> Track Workout </a>

<ul class="workouts-ul">
	{{#each pastWorkouts}}
		<li class="container">
			<div class="image-container">
				<img src="/images/man-biceps-curl.jpg" alt="">
			</div>
			<div class="text-container">
				<h3>{{title}}</h3>
				<p>{{description}}</p>
				<p>{{duration}} minutes</p>
				<p>{{date}} minutes</p>
				{{#each exercises}}
					<h3>{{@index}} â€” {{title}}</h3>
					<p>desc: {{description}}</p>
					<p>type: {{type}}</p>
				{{/each}}
			</div>
		</li>
	{{/each}}
</ul>